extends layout

block content
  .container-fluid
    .col-md-6
      h5 Recommended Problems
      table.table.table-bordered.table-condensed
        thead
          tr
            td Problem
            td Name
        tbody
          each item in rp 
            tr
              td #{item.contestId + item.index}
              td 
                if item.contestId < 100000 
                  a(href='http://www.codeforces.com/problemset/problem/#{item.contestId}/#{item.index}') #{item.name}
                else
                  a(href='http://www.codeforces.com/gym/#{item.contestId}') #{item.name} 
    .col-md-6
      h5 My Recent Submissions 
      table.table.table-bordered.table-condensed
        thead
          tr
            td Id
            td Problem
            td Name
            td Status
        tbody
          each item in sdata.result
            tr
              td 
                if item.contestId < 100000 
                  a(href='http://www.codeforces.com/contest/#{item.contestId}/submission/#{item.id}') #{item.id} 
                else
                  a(href='http://www.codeforces.com/gym/#{item.contestId}/submission/#{item.id}') #{item.id}
              td #{item.contestId + item.problem.index}
              td 
                if item.contestId < 100000 
                  a(href='http://www.codeforces.com/problemset/problem/#{item.contestId}/#{item.problem.index}') #{item.problem.name}
                else
                  a(href='http://www.codeforces.com/gym/#{item.contestId}') #{item.problem.name} 
              if item.verdict == 'OK'
                td.bg-success #{item.verdict}
              else
                td #{item.verdict}
          
