extends layout

block content
  .jumbotron(style="background:transparent")
    .container-fluid
      .row
        .col-md-6.col-md-offset-3
            .input-group
              input.form-control#handle(type='text', placeholder='handle', name='handle')
              span.input-group-btn
                button.btn.btn-primary#submitHandle Go!
  .container-fluid
    .col-md-6#rtableSection(style='display: none')
      h4 Recommended Problems
      table.table.table-bordered.table-condensed#myProblems
        thead
        tbody
      button.btn.btn-default.btn-block#moreP
        span.glyphicon.glyphicon-chevron-down 

    .col-md-6#stableSection(style='display: none')
      h4 Recent Submissions
      table.table.table-bordered.table-condensed#mySubmissions
        thead
        tbody
      button.btn.btn-default.btn-block#moreS
        span.glyphicon.glyphicon-chevron-down 

  script(src='javascripts/codeforcesqp.js')
